    alert('success')
    console.log("拨打成功")
  }
  $scope.onError = function () {
    alert('failed')
    console.log("拨打失败")
  }
  $scope.onDial = function(){
    window.location.href ='tel:17768118730'
  }
 $scope.openGoodInfo = function () {
   $state.go('GoodInfo');
 }
