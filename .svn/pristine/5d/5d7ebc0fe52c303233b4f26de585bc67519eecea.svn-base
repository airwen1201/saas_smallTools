<ion-view view-title="库存">
    <ion-nav-bar>
        <ion-nav-buttons side="left">
            <a class="button button-icon ion-ios-arrow-back" ng-click="toClose()"></a>
        </ion-nav-buttons>
    </ion-nav-bar>
  <div class="bar bar-subheader" style="border: 0;padding: 0">
    <div style="height: 34px">
      <div class="item item-input item-select" style="float: left;width: 34%;height: 36px;background-color: #F9F9F9">
        <select ng-change="chooseCustomer(x)" ng-model="x" style="background-color: #F9F9F9;">
          <option value="" selected>类型</option>
          <option value="">全部</option>
          <option value="">服装</option>
        </select>
      </div>
      <div class="item item-input item-select" style="float: left;width: 33%;height: 36px;background-color: #F9F9F9">
        <select style="background-color: #F9F9F9">
          <option value="" selected>状态</option>
          <option value="">全部</option>
          <option value="">已收款</option>
          <option value="">已付款</option>
        </select>
      </div>
      <div class="item item-input item-select" style="float: left;width: 34%;height: 36px;background-color: #F9F9F9">
        <select style="background-color: #F9F9F9">
          <option value=""selected>排序</option>
          <option value="">交易金额</option>
          <option value="">付款时间</option>
          <option value="">收款时间</option>
        </select>
      </div>
    </div>
  </div>
    <ion-content overflow-scroll="false" style="margin-top: 35px">
        <!-- 筛选-->
        <!--商品列表-->
        <div class="list">
            <div ng-repeat="item in stockOutInList" ng-click="toDetailList($index)">
                <div class="item item-thumbnail-left">
                    <img ng-src="{{item.img[0]}}" ng-if="item.img.length!=0">
                    <img ng-src="img/ic_default.png" ng-if="item.img.length==0">
                    <div class="row">
                        <div class="col"><h2 style="margin-left: 4px" ng-if="item.type==2">我</h2><h2 style="margin-left: 4px" ng-bind="item.from.name" ng-if="item.type==1"></h2><h2 style="margin-left: 4px" ng-bind="item.to.name" ng-if="item.type==0"></h2></div>
                        <div class="col" style="color: #C13E3E;text-align: right" ng-bind="getStockType(stockOutInList[$index].type)"></div>
                    </div>
                    <div class="row">
                        <div class="col" ng-bind="stockOutInList[$index].name+'('+stockOutInList[$index].number+stockOutInList[$index].unit+')'">D1111(600件)</div>
                        <div class="col" style="color: #C13E3E;text-align: right" ng-bind="'￥'+stockOutInList[$index].total"></div>
                    </div>
                </div>
                <div style="height: 10px;background-color: #f5f5f5"></div>
            </div>
        </div>
    </ion-content>
</ion-view>
