<ion-view view-title="商城详情" class="GoodDetail">
    <ion-nav-bar>
        <ion-nav-buttons side="left">
            <a class="button button-icon ion-ios-arrow-back" ng-click="toClose()"></a>
        </ion-nav-buttons>
    </ion-nav-bar>
    <ion-content scroll="true">
        <div class="GoodDetail-Img-Container">
            <img class="GoodDetail-Img" src="https://modao.cc/uploads/images/3519022/raw_1464175964.png">

            <div class="GoodDetail-Name-Bar">
                <div style="background-color: red;display: inline-block;width: 25%;margin:0 0 20px 20px;height: 40px">红色</div>
                <div style="background-color: yellow;display: inline-block;width: 25%;margin:0 0 20px 20px;height: 40px">黄色</div>
                <div style="background-color: blue;display: inline-block;width: 25%;margin:0 0 20px 20px;height: 40px">蓝色</div>
                <!--<div class="directory" style="background-color: #ededed">-->
                    <!--<div ng-repeat="item in [1]">-->
                        <!--<a ng-class="{'pt-active':picShowValue == $index + 1 || !($index + 1)}" ng-click="picShow($index + 1)">yanse</a>-->
                    <!--</div>-->
                <!--</div>-->
            </div>

        </div>
        <div style="width: 100%" ng-show="showMoreValue">

            <div style="width: 100%">

                <div class="row">
                    <div class="col" style="width: 100%;text-align: center"></div>
                    <div class="col" style="width: 100%;text-align: center">颜色</div>
                    <div class="col" style="width: 100%;text-align: center">库存</div>
                    <div class="col" style="width: 100%;text-align: center">数量</div>
                </div>

                <div ng-repeat="1 in [1]">
                    <div class="row">
                        <div class="col" style="width: 100%;text-align: center">
                            <p>11</p>
                        </div>
                        <div class="col" style="width: 100%;text-align: center">
                            <p>#31</p>
                        </div>
                        <div class="col" style="width: 100%;text-align: center">
                            <p>45000</p>
                        </div>
                        <div class="col" style="width: 100%;text-align: center">
                            <input type="number" style="border: 1px solid gray;width: 80%;margin-left: 10%;text-align: center" value="0">
                        </div>
                    </div>
                </div>

            </div>
        </div>
        <div>
            <p style="float: right;margin: 5px 20px 0 0;font-size: 14px"><span style="font-size: 18px;color: green;font-weight: bold">共:0件 ￥0.00</span></p>
        </div>
        <div style="margin: 10px">
            <button class="button button-block button-balanced "  type="submit" ng-click="doSubmit()">确定</button>
        </div>
    </ion-content>
    <!--<div class="bar bar-footer">-->

    <!--</div>-->
</ion-view>
