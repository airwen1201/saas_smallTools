<ion-view view-title="{{vipName}}">
    <ion-nav-bar>
        <ion-nav-buttons side="left">
            <a class="button button-icon ion-ios-arrow-back" ng-click="toClose()"></a>
        </ion-nav-buttons>
    </ion-nav-bar>
    <ion-content overflow-scroll="false">
        <!-- 筛选-->
        <div style="height: 34px">
            <div class="item item-input item-select" style="float: left;width: 34%;height: 36px;background-color: #F9F9F9">
                <select style="background-color: #F9F9F9;">
                    <option value="" disabled selected>类型</option>
                    <option value="">买家</option>
                    <option value="">卖家</option>
                </select>
            </div>
            <div class="item item-input item-select" style="float: left;width: 33%;height: 36px;background-color: #F9F9F9">
                <select style="background-color: #F9F9F9">
                    <option value="" disabled selected>状态</option>
                    <option value="">全部</option>
                    <option value="">未抢单</option>
                    <option value="">已抢单</option>
                    <option value="">待签合同</option>
                </select>
            </div>
            <div class="item item-input item-select" style="float: left;width: 34%;height: 36px;background-color: #F9F9F9">
                <select style="background-color: #F9F9F9">
                    <option value="" disabled selected>排序</option>
                    <option value="email">E-Mail</option>
                    <option value="twitter">Twitter</option>
                    <option value="linkedin">LinkedIn</option>
                </select>
            </div>
        </div>

        <!--列表-->
        <div class="list">
            <div class="" ng-click="toDetail($index)" ng-repeat="item in payableDetailList">
                <div class="item item-thumbnail-left" ng-click="">
                    <img ng-src="{{item.img[0]}}" ng-if="item.img.length!=0">
                    <img ng-src="img/ic_default.png" ng-if="item.img.length==0">
                    <div class="row">
                        <div class="col"> <h2 style="margin-left: 4px" ng-bind="item.name"></h2></div>
                        <div class="col" style="color: #C13E3E;text-align: right" ng-bind="setPayState(item.status)"></div>
                    </div>
                    <div class="row">
                        <div class="col" ng-bind="getListTime(item.dealTime)"></div>
                        <div class="col" style="color: #C13E3E;text-align: right" ng-bind="'￥'+item.total"></div>
                    </div>
                </div>

                <div style="height: 10px;background-color: #f5f5f5"></div>
            </div>

        </div>
    </ion-content>
</ion-view>
